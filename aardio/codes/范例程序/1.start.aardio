//定义一个回调函数，在文本框中点击链接时自动触发此函数。
winform.edit.onHyperlink =function(message,href){

	//在链接上弹起鼠标左键
	if( message = 0x202/*_WM_LBUTTONUP*/ ) {
		import process;
		process.openUrl(href/*超链接*/);
	}
}

