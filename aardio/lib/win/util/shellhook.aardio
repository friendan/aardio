//shellhook 监视外部窗口
namespace win.util; 

class shellhook {

    ctor(winform ){
        this = winform;
        ::User32.RegisterShellHookWindow(this.hwnd);
        
        this.wndproc = function(hwnd,message,wParam,lParam){
    		if(message == WM_SHELLHOOK) {
           		if( this[["onShellHook"]] )
           			this.onShellHook(wParam,lParam);   
    		}
    	}
    
    }
}

namespace shellhook{
	WM_SHELLHOOK = ::User32.RegisterWindowMessage("SHELLHOOK");  
}
 
