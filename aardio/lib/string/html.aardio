    body={head=1};// body 元素开始标签可自动关闭上一个省略结束标签的 head 节点
	li={li=1};//li 元素开始标签可自动关闭上一个省略结束标签的 li 节点
	dt={dt=1;dd=1};
	dd={dt=1;dd=1};
	rt={rt=1;rp=1};
	rp={rt=1;rp=1};
